@using VinaCent.Blaze.Web.Models.Common.Modals
@using VinaCent.Blaze.AppCore.FileUnits.Dto
@model FileUnitRenameDto
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L(LKConstants.Rename)))
<form name="renameFileUnitForm" role="form" class="form-horizontal">
    <input type="hidden" asp-for="Id">
    <div class="modal-body">
        <div class="mb-3">
            <label class="form-label" asp-for="Name">@L(LKConstants.Name)</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Description">@L(LKConstants.Description)</label>
            <textarea asp-for="Description"  class="form-control"></textarea>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>            

<script src="~/view-resources/Views/FileManagement/_RenameFileUnitModal.js" asp-append-version="true"></script>