@using VinaCent.Blaze.AppCore.AuditLogs.Dto
@using VinaCent.Blaze.Web.Areas.AdminCP.Common
@{
    ViewBag.Title = L(AdminCpPageNames.AuditLogs);
    ViewBag.CurrentPageName = AdminCpPageNames.AuditLogs;
}

@section styles {
    <style>
        .mid-truncate {
          position: relative;
          width: 100px;
        }

        .mid-truncate p {
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
        }

        .mid-truncate:after {
          content: attr(data-type);
          position: absolute;
          left: 100%;
          top: 0;
        }


        /*Show on hover*/

        .mid-truncate:hover {
          width: auto
        }

        .mid-truncate:hover:after {
          display: none;
        }
    </style>
}

@section scripts {
    <script src="~/view-resources/Views/AuditLogs/Index.js" asp-append-version="true"></script>
}

<div class="card">
    <div class="card-header">
        <div class="row justify-content-end">
            @*<div class="col-md-6">              
            </div>*@
            <div class="col-md-6">
                @await Html.PartialAsync("~/Areas/AdminCP/Views/AuditLogs/Index.AdvancedSearch.cshtml")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="AuditLogsTable" class="table table-card table-vcenter text-nowrap">
                <thead>
                    <tr>
                        <th>@L(LKConstants.UserName)</th>
                        <th>@L(LKConstants.ClientIpAddress)</th>
                        <th>@L(LKConstants.ExecutionTime)</th>
                        <th>@L(LKConstants.ExecutionDuration)</th>
                        <th style="width:500px">@L(LKConstants.ServiceName)</th>
                        <th>@L(LKConstants.MethodName)</th>
                        <th style="width: 150px">@L(LKConstants.Actions)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="DetailModal" tabindex="-1" role="dialog" aria-labelledby="DetailModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>