@using System.Globalization
@model VinaCent.Blaze.AppCore.AuditLogs.Dto.PagedAuditLogResultRequestDto
@{
    var startTime = DateTime.Now.AddMonths(-1)
            .ToString(CultureInfo.CurrentUICulture.DateTimeFormat.ShortDatePattern);
    var endTime = DateTime.Now.ToString(CultureInfo.CurrentUICulture.DateTimeFormat.ShortDatePattern);
}

<div class="abp-advanced-search">
    <form id="AuditLogsSearchForm" class="form-horizontal">
        <div class="input-group">
            <button type="button" class="btn btn-primary waves-effect waves-light btn-search">
                <span class="fas fa-search" aria-hidden="true"></span>
            </button>
            <input type="text" asp-for="UserName"  class="form-control txt-search" />
            <button type="button"
                    class="btn btn-primary waves-effect waves-light dropdown-toggle"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                <i class="fas fa-filter"></i>
            </button>
            <div class="dropdown-menu  dropdown-menu-right dd-menu" role="menu" style="padding: 0">
                <div class="card" style="margin-bottom: 0">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-12 col-md-7">
                                <label class="form-label" asp-for="ClientIpAddress"></label>
                                <input type="text" class="form-control" asp-for="ClientIpAddress">
                                <span asp-validation-for="ClientIpAddress" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-md-5">
                                <label class="form-label">@L(LKConstants.ExecutionDurationRange) (ms)</label>
                                <div class="input-group">
                                    <input type="text" class="form-control text-center" asp-for="MinExecutionDuration"
                                           placeholder="@L(LKConstants.MinExecutionDuration)">
                                    <span class="input-group-text">-</span>
                                    <input type="text" class="form-control text-center" asp-for="MaxExecutionDuration"
                                           placeholder="@L(LKConstants.MaxExecutionDuration)">
                                </div>
                                <span asp-validation-for="MinExecutionDuration" class="text-danger"></span>
                                <span asp-validation-for="MaxExecutionDuration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12 col-md-6">
                                <label class="form-label" asp-for="BrowserInfo"></label>
                                <input type="text" class="form-control" asp-for="BrowserInfo">
                                <span asp-validation-for="BrowserInfo" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-md-6">
                                <label class="form-label">@L(LKConstants.InRange)</label>
                                <div class="input-group">
                                    <input type="text" class="form-control text-center" asp-for="StartTime"
                                           data-provider="flatpickr" 
                                           data-date-format="d M, Y" 
                                           data-minDate="@startTime">
                                    <span class="input-group-text">-</span>
                                    <input type="text" class="form-control text-center" asp-for="EndTime"
                                           data-provider="flatpickr" 
                                           data-date-format="d M, Y" 
                                           data-minDate="@endTime">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-12 col-md-5">
                                    <label class="form-label" asp-for="ServiceName"></label>
                                    <input type="text" class="form-control" asp-for="ServiceName">
                                </div>
                                <div class="col-12 col-md-4">
                                    <label class="form-label" asp-for="MethodName"></label>
                                    <input type="text" class="form-control" asp-for="MethodName">
                                </div>
                                <div class="col-12 col-md-3">
                                    <label class="form-label" asp-for="HasException"></label>
                                    <select class="form-select" asp-for="HasException">
                                        <option value="">@L(LKConstants.All)</option>
                                        <option value="true">@L(LKConstants.HasException)</option>
                                        <option value="false">@L(LKConstants.NoException)</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-danger btn-clear"><i class="fas fa-backspace me-2"></i> @L(LKConstants.Clear)</button>
                        <button type="button" class="btn btn-primary float-end btn-search"><i class="fas fa-search me-2"></i> @L(LKConstants.Search)</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
