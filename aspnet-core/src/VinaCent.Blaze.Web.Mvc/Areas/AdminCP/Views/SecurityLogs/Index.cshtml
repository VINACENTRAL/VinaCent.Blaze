@using VinaCent.Blaze.Web.Areas.AdminCP.Common
@using VinaCent.Blaze.Web.Themes.Velzon.ThemeOptions
@inject IVelzonThemeOptions ThemeOptions
@{
    ThemeOptions.AddBreadcrumb(L(LKConstants.AdminCP)).AddBreadcrumb(L(LKConstants.SecurityLogs)).Commit(this);
    ViewBag.Title = L(AdminCpPageNames.SecurityLogs);
    ViewBag.CurrentPageName = AdminCpPageNames.SecurityLogs;
}

@section styles {
    <style>
        .truncate {
          position: relative;
          width: 100px;
        }

        .truncate p {
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
        }

        .truncate:after {
          content: attr(data-type);
          position: absolute;
          left: 100%;
          top: 0;
        }
    </style>
}

@section scripts {
    <script src="~/view-resources/Views/SecurityLogs/Index.js" asp-append-version="true"></script>
}

<div class="card">
    <div class="card-header">
        <div class="row justify-content-end">
            <div class="col-md-6">
                @await Html.PartialAsync("~/Areas/AdminCP/Views/SecurityLogs/Index.AdvancedSearch.cshtml")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="SecurityLogsTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@L(LKConstants.UserNameOrEmail)</th>
                        <th>@L(LKConstants.ClientIpAddress)</th>
                        <th>@L(LKConstants.BrowserInfo)</th>
                        <th>@L(LKConstants.CreationTime)</th>
                        <th>@L(LKConstants.Result)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>