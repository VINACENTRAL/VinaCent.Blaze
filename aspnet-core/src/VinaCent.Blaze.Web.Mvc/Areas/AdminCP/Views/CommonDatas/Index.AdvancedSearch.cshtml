@using Abp
@using VinaCent.Blaze
@using Abp.Zero
@using VinaCent.Blaze.AppCore.CommonDatas.Dto
@model PagedCommonDataResultRequestDto

<div class="abp-advanced-search">
    <form class="form-horizontal search-form">
        <div class="input-group">
            <button type="button" class="btn btn-primary waves-effect waves-light btn-search">
                <span class="fas fa-search" aria-hidden="true"></span>
            </button>
            <input asp-for="Keyword" class="form-control txt-search" />
            <button type="button"
                    class="btn btn-primary waves-effect waves-light dropdown-toggle"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                <i class="fas fa-filter"></i>
            </button>
            <div class="dropdown-menu  dropdown-menu-right dd-menu" role="menu" style="padding: 0">
                <div class="card" style="margin-bottom: 0">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Type"></label>
                                    <input asp-for="Type" class="form-control txt-search" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="ParentKey"></label>
                                    <input asp-for="ParentKey" class="form-control txt-search" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-danger btn-clear"><i class="fas fa-backspace me-2"></i> @L(LKConstants.Clear)</button>
                        <button type="button" class="btn btn-primary float-end btn-search"><i class="fas fa-search me-2"></i> @L(LKConstants.Search)</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
