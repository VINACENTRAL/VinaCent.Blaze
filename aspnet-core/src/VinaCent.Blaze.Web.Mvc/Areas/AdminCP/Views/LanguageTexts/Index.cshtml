@inject IVelzonThemeOptions ThemeOptions
@using VinaCent.Blaze.AppCore.LanguageTexts.Dto
@using VinaCent.Blaze.Web.Areas.AdminCP.Common
@using VinaCent.Blaze.Web.Startup
@using VinaCent.Blaze.Web.Themes.Velzon.ThemeOptions
@{
    ThemeOptions.AddBreadcrumb(L(LKConstants.AdminCP)).AddBreadcrumb(L(LKConstants.LanguageTextManagement)).Commit(this);
    ViewBag.Title = L(LKConstants.LanguageTextManagement);
    ViewBag.CurrentPageName = AdminCpPageNames.LanguageTextManagement;
}
@section scripts
{
    <script src="~/view-resources/Views/LanguageTexts/Index.js" asp-append-version="true"></script>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <button type="button" data-bs-toggle="modal" data-bs-target="#LanguageTextCreateModal" class="btn btn-success waves-effect waves-light mb-3 mb-lg-0">
                    <i class="fa fa-plus-square"></i>
                    @L(LKConstants.Create)
                </button>
            </div>
            <div class="col-md-6">
                @await Html.PartialAsync("~/Areas/AdminCP/Views/LanguageTexts/Index.AdvancedSearch.cshtml", new PagedLanguageTextResultRequestDto())
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="LanguageTextsTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@L(LKConstants.Key)</th>
                        <th class="text-start">@L(LKConstants.DefaultTranslate)</th>
                        <th class="text-start">@L(LKConstants.CurrentTranslate)</th>
                        <th class="text-start">@L(LKConstants.SourceName)</th>
                        <th style="width: 150px">@L(LKConstants.Actions)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AdminCP/Views/LanguageTexts/_CreateModal.cshtml")

<div class="modal fade" id="LanguageTextEditModal" tabindex="-1" role="dialog" aria-labelledby="LanguageTextEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
