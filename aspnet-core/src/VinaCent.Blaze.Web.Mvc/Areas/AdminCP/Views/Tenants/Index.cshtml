@inject IVelzonThemeOptions ThemeOptions
@using VinaCent.Blaze.Web.Areas.AdminCP.Common
@using VinaCent.Blaze.Web.Startup
@using VinaCent.Blaze.Web.Themes.Velzon.ThemeOptions
@{
    ThemeOptions.AddBreadcrumb(L(LKConstants.AdminCP)).AddBreadcrumb(L(LKConstants.Tenants)).Commit(this);
    ViewBag.Title = L(LKConstants.Tenants);
    ViewBag.CurrentPageName = AdminCpPageNames.Tenants;
}
@section scripts
{
    <script src="~/view-resources/Views/Tenants/Index.js" asp-append-version="true"></script>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <button type="button" data-bs-toggle="modal" data-bs-target="#TenantCreateModal" class="btn btn-success waves-effect waves-light mb-3 mb-lg-0" data-quick-key="F2">
                    <i class="fa fa-plus-square"></i>
                    @L(LKConstants.Create)
                </button>
            </div>
            <div class="col-md-6">
                @await Html.PartialAsync("~/Areas/AdminCP/Views/Tenants/Index.AdvancedSearch.cshtml")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="TenantsTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>@L(LKConstants.TenancyName)</th>
                        <th>@L(LKConstants.Name)</th>
                        <th>@L(LKConstants.IsActive)</th>
                        <th style="width: 150px">@L(LKConstants.Actions)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AdminCP/Views/Tenants/_CreateModal.cshtml")

<div class="modal fade" id="TenantEditModal" tabindex="-1" role="dialog" aria-labelledby="TenantEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
