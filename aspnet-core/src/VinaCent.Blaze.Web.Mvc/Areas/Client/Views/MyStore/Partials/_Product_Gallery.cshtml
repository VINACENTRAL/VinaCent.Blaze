@model VinaCent.Blaze.BusinessCore.ShopModule.Products.Dto.CreateOrUpdateProductDto
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">@L(LKConstants.ProductGallery)</h5>
    </div>
    <div class="card-body">
        <div class="mb-4">
            <h5 class="fs-14 mb-1">@L(LKConstants.FeatureImage)</h5>
            <p class="text-muted">@L(LKConstants.AddProductMainImage)</p>
            <div class="mx-auto">
                <input type="file" class="filepond product-feature-image" accept="image/png, image/jpeg, image/gif"
                       asp-for="FeatureImage"/>
            </div>

            <h5 class="fs-14 mb-1">@L(LKConstants.ProductImage)</h5>
            <p class="text-muted">@L(LKConstants.AddImagesOfProduct)</p>
            <div data-dropzone data-max-files="5">
                <div class="dropzone">
                    <div class="fallback">
                        <input name="file" type="file" multiple="multiple">
                    </div>
                    <div class="dz-message needsclick">
                        <div class="mb-3">
                            <i class="display-4 text-muted ri-upload-cloud-2-fill"></i>
                        </div>

                        <h4>@L(LKConstants.DropFilesHereOrClickToUpload)</h4>
                    </div>
                </div>

                <ul class="list-unstyled mb-0 drop-preview">
                    <li class="mt-2">
                        <!-- This is used as the file preview template -->
                        <div class="border rounded">
                            <div class="d-flex p-2">
                                <div class="flex-shrink-0 me-3">
                                    <div class="avatar-sm bg-light rounded">
                                        <img data-dz-thumbnail class="img-fluid rounded d-block" src="#" alt="Dropzone-Image"/>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="pt-1">
                                        <h5 class="fs-14 mb-1" data-dz-name>&nbsp;</h5>
                                        <p class="fs-13 text-muted mb-0" data-dz-size></p>
                                        <strong class="error text-danger" data-dz-errormessage></strong>
                                    </div>
                                </div>
                                <div class="flex-shrink-0 ms-3">
                                    <button data-dz-remove class="btn btn-sm btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>