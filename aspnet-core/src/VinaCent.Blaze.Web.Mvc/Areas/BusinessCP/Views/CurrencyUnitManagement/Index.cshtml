@using VinaCent.Blaze.BusinessCore.CurrencyUnits.Dto
@using VinaCent.Blaze.Web.Areas.BusinessCP.Common
@using VinaCent.Blaze.Web.Startup
@using VinaCent.Blaze.Web.Themes.Velzon.ThemeOptions
@inject IVelzonThemeOptions ThemeOptions

@{
    ThemeOptions.AddBreadcrumb(L(LKConstants.BusinessCP)).AddBreadcrumb(L(LKConstants.CurrencyManagement)).AddBreadcrumb(L(LKConstants.CurrencyUnitManagement)).Commit(this);
    ViewBag.Title = L(LKConstants.CurrencyUnitManagement);
    ViewBag.CurrentPageName = BusinessCpPageNames.CurrencyUnitManagement;
}
@section scripts
{
<script src="~/view-resources/Views/BusinessCP/CurrencyUnitManagement/Index.js" asp-append-version="true"></script>
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <button type="button" data-bs-toggle="modal" data-bs-target="#CurrencyUnitManagementCreateModal" class="btn btn-success waves-effect waves-light mb-3 mb-lg-0">
                    <i class="fa fa-plus-square"></i>
                    @L(LKConstants.Create)
                </button>
            </div>
            <div class="col-md-6">
                @await Html.PartialAsync("~/Areas/BusinessCP/Views/CurrencyUnitManagement/Index.AdvancedSearch.cshtml", new PagedCurrencyUnitResultRequestDto())
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="CurrencyUnitManagementTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>@L(LKConstants.CurrencyNativeName)</th>
                        <th>@L(LKConstants.CurrencyDecimalSeparator)</th>
                        <th>@L(LKConstants.CurrencyGroupSeparator)</th>
                        <th>@L(LKConstants.CurrencySymbol)</th>
                        <th>@L(LKConstants.ISOCurrencySymbol)</th>
                        <th style="width: 150px">@L(LKConstants.Actions)</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/BusinessCP/Views/CurrencyUnitManagement/_CreateModal.cshtml", new CreateCurrencyUnitDto())

<div class="modal fade" id="CurrencyUnitManagementEditModal" tabindex="-1" role="dialog" aria-labelledby="CurrencyUnitManagementEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
