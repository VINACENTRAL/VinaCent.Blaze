@using System.Text.RegularExpressions
@using VinaCent.Blaze.Utilities
@using VinaCent.Blaze.Web.Areas.BusinessCP.Common
@using VinaCent.Blaze.Web.Areas.BusinessCP.Models.ShopModule.Categories
@using VinaCent.Blaze.Web.Themes.Velzon.ThemeOptions
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using VinaCent.Blaze.BusinessCore.ShopModule.Categories.Dto
@using Abp.Extensions
@using Abp.Json
@inject IVelzonThemeOptions ThemeOptions
@model CategoryViewModel

@{
    ThemeOptions.AddBreadcrumb(L(LKConstants.BusinessCP))
    .AddBreadcrumb(L(LKConstants.Shop))
    .AddBreadcrumb(L(LKConstants.Shop_CategoryManagement))
    .AddBreadcrumb(L(Model.CurrentLevel == 0 ? LKConstants.Shop_CategoryManagement_ParentLevel : LKConstants.Shop_CategoryManagement_ChildrenLevel))
    .Commit(this);
    ViewBag.Title = L(Model.CurrentLevel == 0 ? LKConstants.Shop_CategoryManagement_ParentLevel : LKConstants.Shop_CategoryManagement_ChildrenLevel) + " - " + L(LKConstants.Shop_CategoryManagement);
    ViewBag.CurrentPageName = Model.CurrentLevel == 0 ? BusinessCpPageNames.ShopPageNames.Shop_CategoryManagement_ParentLevel : BusinessCpPageNames.ShopPageNames.Shop_CategoryManagement_ChildrenLevel;

    var commonRef = new
    {
        ServiceName = "shopCategory",
        TableAction = "getAll",
        CreateAction = "create",
        UpdateAction = "update",
        DeleteAction = "delete",
        OnModalCreateShow = "",
        OnModalCreateHide = "",
        OnModalUpdateShow = "",
        OnModalUpdateHide = "",
        UpdateHtmlInnerAction = Url.Action("EditModal", "Categories", new { Area = "BusinessCP" })?.TrimStart('/')
    }.ToJsonString(true);

    ViewBag.CurrentLevel = Model.CurrentLevel;
}

@section scripts
    {
    <script src="~/Common/vinacent.db.js" asp-append-version="true"></script>

    <script src="~/view-resources/Views/BusinessCP/ShopModule/Categories/Index.js" asp-append-version="true"></script>
}

    <section app-main-section="@commonRef">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-success waves-effect waves-light mb-3 mb-lg-0 create-btn">
                            <i class="fa fa-plus-square"></i>
                            @L(LKConstants.Create)
                        </button>
                    </div>
                    <div class="col-md-6">
                        @await Html.PartialAsync("~/Areas/BusinessCP/Views/ShopModule/Categories/Index.AdvancedSearch.cshtml", new FilterCategoryDto())
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered main-table">
                        <thead>
                            <tr>
                                <th data-ref="@nameof(CategoryDto.Title).ToCamelCase()" data-render="RenderTitleColumn">@L(LKConstants.Title)</th>
                                <th data-ref="@nameof(CategoryDto.Slug).ToCamelCase()">@L(LKConstants.Slug)</th>
                                <th data-ref="@nameof(CategoryDto.Content).ToCamelCase()">@L(LKConstants.Content)</th>
                                <th data-action="" style="width: 150px">@L(LKConstants.Actions)</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @await Html.PartialAsync("~/Areas/BusinessCP/Views/ShopModule/Categories/_CreateModal.cshtml", new CreateCategoryDto())

        <div class="modal fade update-modal" tabindex="-1" role="dialog" data-backdrop="static">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                </div>
            </div>
        </div>
    </section>