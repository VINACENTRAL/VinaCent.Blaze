@using VinaCent.Blaze.Web.Models.Common.Modals
@model VinaCent.Blaze.BusinessCore.ShopModule.Categories.Dto.CreateCategoryDto
@{
    Layout = null;
    var currentLevel = (int)ViewBag.CurrentLevel;

    var title = currentLevel == 0 ? L(LKConstants.ShopModule_CreateNewParentCategory) : L(LKConstants.ShopModule_CreateNewChildCategory);
}
<div class="modal fade create-modal" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(title))
            <form name="LanguageCreateForm" role="form" class="form-horizontal">
                <input type="hidden" asp-for="ParentId" />
                <div class="modal-body">
                    @if (currentLevel != 0)
                    {
                        <div class="required mb-3">
                            <label class="form-label" asp-for="ParentId"></label>
                            <select class="form-control" asp-for="ParentId" asp-items="@ViewBag.Parents"></select>
                            <span asp-validation-for="ParentId" class="invalid-feedback"></span>
                        </div>
                    }
                    <div class="required mb-3">
                        <label class="form-label" asp-for="Title"></label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="invalid-feedback"></span>
                    </div>
                    <div class="required mb-3">
                        <label class="form-label" asp-for="MetaTitle"></label>
                        <input type="text" asp-for="MetaTitle" class="form-control" />
                        <span asp-validation-for="MetaTitle" class="invalid-feedback"></span>
                    </div>
                    <div class="required mb-3">
                        <label class="form-label" asp-for="Slug"></label>
                        <input type="text" asp-for="Slug" class="form-control" slug-of="#Title" />
                        <span asp-validation-for="Slug" class="invalid-feedback"></span>
                    </div>
                    <div class="required mb-3">
                        <label class="form-label" asp-for="Content"></label>
                        <textarea class="form-control" asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="invalid-feedback"></span>
                    </div>
                    <div class="form-check form-switch form-switch-success mb-3">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive" value="true">
                        <label class="form-check-label" asp-for="IsActive"></label>
                        <span asp-validation-for="IsActive" class="invalid-feedback"></span>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>