@using VinaCent.Blaze.Web.Views.Shared.Components.VelzonAside
@using Microsoft.AspNetCore.Mvc.TagHelpers

<div class="app-menu navbar-menu">
    <div class="navbar-brand-box">
        <!-- Dark Logo-->
        <a asp-action="Index" asp-area="AdminCP" asp-controller="Dashboard" class="logo logo-dark">
            <span class="logo-sm">
                <img src="./assets/images/logo-sm.png" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="./assets/images/logo-dark.png" alt="" height="17">
            </span>
        </a>
        <!-- Light Logo-->
        <a asp-action="Index" asp-area="AdminCP" asp-controller="Dashboard" class="logo logo-light">
            <span class="logo-sm">
                <img src="./assets/images/logo-sm.png" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="./assets/images/logo-light.png" alt="" height="17">
            </span>
        </a>
        <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
            <i class="ri-record-circle-line"></i>
        </button>
    </div>
    <div id="scrollbar">
        <div class="container-fluid">
            @(await Component.InvokeAsync<VelzonAsideViewComponent>())
        </div>
    </div>
    <div class="sidebar-background"></div>
</div>