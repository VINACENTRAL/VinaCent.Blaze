@using Abp.Authorization.Users
@model VinaCent.Blaze.Web.Models.Account.RegisterViewModel
@{
    ViewBag.Title = L("Register");
}
@section scripts
{
@*<script src="~/view-resources/Views/Account/Register.js" asp-append-version="true"></script>*@
}

<div class="card mt-4">

    <div class="card-body p-4">
        <div class="text-center mt-2">
            <h4 class="text-primary">Forgot Password?</h4>
            <p class="text-muted">Reset password with velzon</p>

            <lord-icon src="https://cdn.lordicon.com/rhvddzym.json" trigger="loop" colors="primary:#0ab39c" class="avatar-xl">
            </lord-icon>

        </div>

        <div class="alert alert-borderless alert-warning text-center mb-2 mx-2" role="alert">
            A password reset link will be sent to your email to reset your password. If you don't get an email within a few minutes, please re-try.
        </div>
        <div class="p-2">
            <form>
                <div class="mb-4">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter Email">
                </div>

                <div class="text-center mt-4">
                    <button class="btn btn-success w-100" type="submit">Send Reset Link</button>
                </div>
            </form><!-- end form -->
        </div>
    </div>
    <!-- end card body -->
    <vc:velzon-account-language />
</div>
<!-- end card -->

<div class="mt-4 text-center">
    <p class="mb-0">Wait, I remember my password... <a asp-action="Login" class="fw-semibold text-primary text-decoration-underline"> Click here </a> </p>
</div>