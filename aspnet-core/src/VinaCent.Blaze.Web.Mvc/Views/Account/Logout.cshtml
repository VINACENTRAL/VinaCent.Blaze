@{
    ViewBag.Title = L(LKConstants.Logout);
}

<div class="card mt-4">
    <div class="card-body p-4 text-center">
        <lord-icon src="https://cdn.lordicon.com/hzomhqxz.json" trigger="loop" colors="primary:#4b38b3,secondary:#08a88a" style="width:180px;height:180px">
        </lord-icon>

        <div class="mt-4 pt-2">
            <h5>@L(LKConstants.YouAreaLoggedOut)</h5>
            <p class="text-muted">@L(LKConstants.ThankYouForUsingOurService)</p>
            <div class="mt-4">
                <a asp-action="Login" class="btn btn-success w-100">@L(LKConstants.LogIn)</a>
            </div>
        </div>
    </div>
    <!-- end card body -->
</div>
<!-- end card -->