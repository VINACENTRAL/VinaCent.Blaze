@{
    var status = ViewBag.Status == true;
    var message = (string)ViewBag.Message;
}
<div class="card mt-4">
    <div class="card-body p-4 text-center">
        <div class="avatar-lg mx-auto mt-2">
            <div class="avatar-title bg-light text-@(status?"success":"danger") display-3 rounded-circle">
                <i class="ri-@(status?"checkbox":"close")-circle-fill"></i>
            </div>
        </div>
        <div class="mt-4 pt-2">
            <h4>@L(status?LKConstants.Successful:LKConstants.Unsuccessful)</h4>
            <p class="text-muted mx-4">@message</p>
            <div class="mt-4">
                <a asp-action="VerifyAndChangePassword" asp-controller="Account" asp-route-verify="@ViewBag.Verify" asp-route-email="@ViewBag.Email" class="btn btn-success mb-3 w-100">@L(LKConstants.TryAgain)</a>
                <a asp-action="Index" asp-controller="Home" asp-area="Client" class="btn btn-primary w-100">@L(LKConstants.GoBackHome)</a>
            </div>
        </div>
    </div>
    <!-- end card body -->
</div>