@{
    var appSelfUrl = "/";

    var logoLightSmall = "/vinacent/brand/light.png";
    var logoDarkSmall = "/vinacent/brand/dark.png";

    var logoLightLarge = "/vinacent/brand/light.png";
    var logoDarkLarge = "/vinacent/brand/dark.png";

    var isInnerSidebar = ViewBag.IsInnerSidebar == true;
}
<div class="navbar-brand-box@(!isInnerSidebar?" horizontal-logo":"")">
    <a href="@appSelfUrl" class="logo logo-light">
        <span class="logo-sm">
            <img src="@logoDarkSmall" alt="" height="22">
        </span>
        <span class="logo-lg">
            <img src="@logoDarkLarge" alt="" height="36">
        </span>
    </a>

    <a href="@appSelfUrl" class="logo logo-dark">
        <span class="logo-sm">
            <img src="@logoLightSmall" alt="" height="22">
        </span>
        <span class="logo-lg">
            <img src="@logoLightLarge" alt="" height="36">
        </span>
    </a>
    @if (isInnerSidebar)
    {
        <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover"
            id="vertical-hover">
            <i class="ri-record-circle-line"></i>
        </button>
    }
</div>